--// Reusable Button Creator
local function createButton(text, positionY, color)
    local btn = Instance.new("TextButton", frame)
    btn.Size = UDim2.new(0.9, 0, 0, 40)
    btn.Position = UDim2.new(0.05, 0, 0, positionY)
    btn.BackgroundColor3 = color or Color3.fromRGB(40, 40, 50)
    btn.Text = text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 16
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 8)
    return btn
end

--// Egg ESP Logic
local function applyEggESP(eggModel, petName)
    if eggModel:FindFirstChild("PetBillboard") then
        eggModel.PetBillboard:Destroy()
    end
    local billboard = Instance.new("BillboardGui", eggModel)
    billboard.Name = "PetBillboard"
    billboard.Size = UDim2.new(0, 200, 0, 40)
    billboard.StudsOffset = Vector3.new(0, 3, 0)
    billboard.AlwaysOnTop = true

    local label = Instance.new("TextLabel", billboard)
    label.Size = UDim2.new(1, 0, 1, 0)
    label.Text = eggModel.Name .. " | " .. petName
    label.Font = Enum.Font.GothamBold
    label.TextSize = 16
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
end

local function getNearbyEggs(radius)
    local eggs = {}
    local root = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
    if not root then return eggs end

    for _, obj in ipairs(Workspace:GetDescendants()) do
        if obj:IsA("Model") and petTable[obj.Name] then
            if (obj:GetModelCFrame().Position - root.Position).Magnitude <= radius then
                if not truePetMap[obj] then
                    local pets = petTable[obj.Name]
                    local chosen = pets[math.random(1, #pets)]
                    truePetMap[obj] = chosen
                end
                table.insert(eggs, obj)
            end
        end
    end
    return eggs
end

local function randomizeEggs()
    for _, egg in ipairs(getNearbyEggs(60)) do
        local pets = petTable[egg.Name]
        local chosen = pets[math.random(1, #pets)]
        truePetMap[egg] = chosen
        applyEggESP(egg, chosen)
    end
end

--// Buttons
local btn1 = createButton("ðŸŽ² Randomize Pets", 70, Color3.fromRGB(180, 80, 255))
btn1.MouseButton1Click:Connect(randomizeEggs)

local btn2 = createButton("ðŸ‘ï¸ ESP: ON", 120)
btn2.MouseButton1Click:Connect(function()
    espEnabled = not espEnabled
    btn2.Text = espEnabled and "ðŸ‘ï¸ ESP: ON" or "ðŸ‘ï¸ ESP: OFF"
end)

local btn3 = createButton("ðŸ” Auto Randomize: OFF", 170)
btn3.MouseButton1Click:Connect(function()
    autoRunning = not autoRunning
    btn3.Text = autoRunning and "ðŸ” Auto Randomize: ON" or "ðŸ” Auto Randomize: OFF"
    coroutine.wrap(function()
        while autoRunning do
            randomizeEggs()
            wait(3)
        end
    end)()
end)

local btn4 = createButton("ðŸ§¬ Pet Mutation ESP Script", 220, Color3.fromRGB(80, 180, 255))
